{
  "active_pane_modifiers": {
    "border_size": 0.5,
    "inactive_opacity": 0.6
  },
  "buffer_font_family": "Sarasa Mono K",
  "buffer_font_size": 16,
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.flake",
    "**/.direnv",
    "**/.envrc"
  ],
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "inlay_hints": {
    "enabled": true
  },
  "show_whitespaces": "boundary",
  "wrap_guides": [80, 100],
  "terminal": {
    "font_family": "Sarasa Term K"
  },
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },
  "vim_mode": false,
  "assistant": {
    "version": "2",
    "enabled": false
  },
  "ui_font_family": "Sarasa UI K",
  "ui_font_size": 16
}
